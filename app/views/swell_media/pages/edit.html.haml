

.container
	.row
		.col-xs-10
			%ul.breadcrumb
				%li
					= link_to 'Admin', admin_index_path
				%li
					= link_to 'Page Admin', admin_pages_path
				%li
					%strong
						Edit
						= @page.title
		.col-xs-2
			%a.btn.btn-primary{ href: preview_page_path( @page.id ), target: '_new' }
				%i.fa.fa-eye
				Preview
	
	= form_for @page do |f|
	
		.row
			.col-xs-8
				.form-group
					= f.text_field :title, class: 'form-control'

				.form-group
					.input-group
						= f.label :path, 'URL for this page:'
						%span.input-group-addon
							http://playswell.com/
						= f.text_field :path, class: 'form-control', placeholder: @page.slug


				.form-group
					= f.text_area :content, class: 'form-control', rows: 12


			.col-xs-4
				.boxFocus
					.form-group
						= f.label :publish_at
						= f.text_field :publish_at, class: 'form-control datepicker'
					.form-group
						= f.label :status
						= f.select :status, [[ 'draft', 'draft' ], [ 'active', 'active' ], [ 'disabled', 'disabled' ] ], {}, class: 'form-control'
					.form-group
						= f.check_box :show_title, {}, 'true', 'false'
						Show Title?
					.form-group
						= f.check_box :is_commentable, {}, 'true', 'false'
						Allow Comments?
					.form-group
						= f.submit 'Update', class: 'btn btn-primary'
						.pull-right= link_to 'Cancel', :back, class: 'btn btn-default btn-sm'
