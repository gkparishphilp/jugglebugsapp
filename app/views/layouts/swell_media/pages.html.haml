!!!strict
/[if lt IE 7] <html class="no-js lt-ie9 lt-ie8 lt-ie7">
/[if IE 7] <html class="no-js lt-ie9 lt-ie8">
/[if IE 8] <html class="no-js lt-ie9">
//[if gt IE 8] <html class="no-js">
%html{ lang: :en }
	%head
		%title
			= @page_info[:title]
		%meta{charset: "utf-8"}/
		%meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
		%meta{content: "", name: "description"}
		%meta{content: "width=device-width", name: "viewport"}
		%link{ rel: "shortcut icon", href: asset_path( 'favicon.ico' ) }
		%link{href: "http://fonts.googleapis.com/css?family=Abel:400|Oswald:300,400,700", media: "all", rel: "stylesheet", type: "text/css"}
		= stylesheet_link_tag "//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css"
		= stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"
		= stylesheet_link_tag "css/theme_venera_blue", media: "all", "data-turbolinks-track" => true
		= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true

		= javascript_include_tag "application", "data-turbolinks-track" => true
	%body
		%header#header{ style: 'height: 6em;' }
			= render 'swell_media/application/navbar'

		%section#main{ style: 'margin-top:4em;'}
			= render 'swell_media/application/flash'

			= yield
		%br
		%br
		%br


		= javascript_include_tag "js/jquery-1.8.3.min.js", "data-turbolinks-track" => true
		= javascript_include_tag "//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js", "data-turbolinks-track" => true
		= javascript_include_tag "js/prettify.js", "data-turbolinks-track" => true
		= javascript_include_tag "js/lightbox.js", "data-turbolinks-track" => true
		= javascript_include_tag "js/main.js", "data-turbolinks-track" => true

		= render 'swell_media/application/footer'

